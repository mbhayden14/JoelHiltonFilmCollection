@{
    ViewBag.Title = "Submit a Film to the Collection";
}

@model  JoelHiltonFilmCollection.Models.ApplicationResponse

<h1>Please enter the following information. Title, Year, Director, and Rating are required fields.</h1>

<br />
<br />

<form asp-action="FilmSubmission" method="post">

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating">Choose a rating:</label>
        <select id="Rating" name="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Is this film editied?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
    </div>

    <button type="submit">Submit Film to Collection</button>

    <!-- Display error message with invalid input -->
    <div asp-validation-summary="All" style="color: red; font-weight: bold"></div>


</form>